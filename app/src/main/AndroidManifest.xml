<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lrx.live.player">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_sample_mjmz"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:name="com.lrxliveandreadplayer.demo.MyApplication"
        android:theme="@style/AppTheme2">
        <activity android:name="com.lrxliveandreadplayer.demo.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.lrxliveandreadplayer.demo.activitys.IjkLivePlayer"></activity>
        <activity android:name="com.lrxliveandreadplayer.demo.activitys.LiveActivity"></activity>
        <activity android:name="com.lrxliveandreadplayer.demo.activitys.ScreenRecordActivity"></activity>
        <activity android:name="com.lrxliveandreadplayer.demo.activitys.AudioRecordActivity"></activity>
        <activity android:name="com.lrxliveandreadplayer.demo.activitys.ChartGroupActivity"></activity>
    </application>

</manifest>