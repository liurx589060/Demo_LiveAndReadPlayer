<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lrxliveandreadplayer.demo.MainActivity"
    >


    <Button
        android:id="@+id/btn_imageSelector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_match"
        android:layout_alignStart="@+id/btn_match"
        android:layout_below="@+id/btn_match"
        android:layout_marginTop="32dp"
        android:text="图片选择" />

    <Button
        android:id="@+id/btn_ijkPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txv_userName"
        android:layout_marginLeft="71dp"
        android:layout_marginStart="71dp"
        android:layout_marginTop="112dp"
        android:text="ijkPlayer播放"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_live"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_ijkPlayer"
        android:layout_alignStart="@+id/btn_ijkPlayer"
        android:layout_below="@+id/btn_ijkPlayer"
        android:layout_marginTop="41dp"
        android:text="直播" />

    <Button
        android:id="@+id/btn_match"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_live"
        android:layout_alignStart="@+id/btn_live"
        android:layout_below="@+id/btn_live"
        android:layout_marginTop="42dp"
        android:text="匹配" />

    <TextView
        android:id="@+id/txv_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_ijkPlayer"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btn_ijkPlayer"
        android:layout_marginTop="25dp"
        android:text="用户名：" />

    <EditText
        android:id="@+id/edit_ipAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txv_userName"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_ijkPlayer"
        android:layout_alignStart="@+id/btn_ijkPlayer"
        android:layout_below="@+id/edit_ipAddress"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="男"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/radio_lady"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="女" />
    </RadioGroup>

    <Button
        android:id="@+id/btn_ipAdress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/edit_ipAddress"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_toEndOf="@+id/edit_ipAddress"
        android:layout_toRightOf="@+id/edit_ipAddress"
        android:text="保存" />

    <Button
        android:id="@+id/btn_xq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btn_ipAdress"
        android:layout_alignRight="@+id/btn_ipAdress"
        android:layout_below="@+id/btn_ijkPlayer"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        android:text="XQ" />
</RelativeLayout>
